@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right" >
            <li>
                <a style="color: #3d9799 !important;" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button style="color: #3d9799 !important;" type="submit" class="btn btn-link navbar-btn navbar-link">Logout</button>
            </li>
        </ul>
    </form>

    <script>

    </script>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a class="nav-bar-color-buttons" asp-area="Identity" asp-page="/Account/Register">Register</a></li>
        <li><a class="nav-bar-color-buttons" asp-area="Identity" asp-page="/Account/Login">Login</a></li>
    </ul>
}