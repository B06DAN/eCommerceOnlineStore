
@{
    ViewData["Title"] = "AdminPanel";
}
<html>
<head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <link rel="stylesheet" href="~/css/products.css" />
    <script src="~/js/ProductAPI.js"></script>
</head>

<body>
    <div class="container">
        <div class="row">
            <br />
            <br />
            <h1 style="text-align: center">Products</h1>
            <br />
            <div class="pull-right">
                @*<div class="btn btn-default btn-info btn-md"><i class="glyphicon glyphicon-refresh"></i>  Refresh</div>*@
                <div class="btn btn-default btn-success btn-md" data-toggle="modal" data-target="#add-product"><i class="glyphicon glyphicon-plus"></i> New</div>
                <div class="btn btn-default btn-warning btn-md" data-toggle="modal" data-target="#edit-product"><i class="fas fa-edit"></i> Edit</div>
                <div class="btn btn-default btn-danger  btn-md" data-toggle="modal" data-target="#remove-product"><i class="fas fa-trash"></i>Delete</div>

            </div>
        </div>
        <br />

        <div class="row">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr class="bg-info ">
                        <th>Id</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Image</th>
                        @*<th>Actions</th>*@
                    </tr>
                </thead>

                <tbody id="productList">
                    @foreach (var product in ViewBag.Products)
                    {
                        <tr>
                            <td>@product.ProductID</td>
                            <td>@product.ProductName</td>
                            <td>@product.ProductPrice</td>
                            <td>@product.ProductQuantity</td>
                            <td><img class="image-for-products" src="@product.ProductImage" /></td>
                            @*<td style="width: 90px;">
                                <div class="btn btn-sm btn-default"><i class="icon-trash glyphicon glyphicon-edit text-primary"></i></div>
                                @*<div class="btn btn-sm btn-default"><i class="icon-trash glyphicon glyphicon-trash text-danger"></i></div>*@
                            @*</td>*@
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div id="add-product" class="modal fade" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">×</button>
                        <h4 class="modal-title" id="hdr-form-customer">New product</h4>
                    </div>
                    <div class="modal-body">
                        <form class="form-group" id="addProductForm">
                            <label>Name</label>
                            <input type="text" name="value" id="frm-customer-name" class="form-control">

                            <label>Price</label>
                            <input type="text" name="text" id="frm-customer-quantity" class="form-control">

                            <label>Quantity</label>
                            <input type="text" name="text" id="frm-customer-image" class="form-control">

                            <label>Image</label>
                            <input type="text" name="text" id="frm-customer-price" class="form-control">
                            @*<input type="file" name="pic" accept="image/*">*@

                            <div class="clearfix"></div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-link pull-left" data-dismiss="modal">Cancel</button>
                        <button type="button" onclick="AddProduct()" class="btn btn-default btn-success" data-dismiss="modal">Add</button>
                    </div>
                </div>
            </div>
        </div>


        <div id="remove-product" class="modal fade" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">×</button>
                        <h4 class="modal-title" id="hdr-form-customer">Delete product</h4>
                    </div>
                    <div class="modal-body">
                        <form class="form-group" id="removeProductForm">
                            <label>Name</label>
                            <input type="text" name="Name" id="frm-customer-name" class="form-control">

                            <div class="clearfix"></div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-link pull-left" data-dismiss="modal">Cancel</button>
                        <button type="button" onclick="RemoveProduct()" class="btn btn-default btn-success" data-dismiss="modal">Remove</button>
                    </div>
                </div>
            </div>
        </div>

        <div id="edit-product" class="modal fade" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">×</button>
                        <h4 class="modal-title" id="hdr-form-customer">Update product</h4>
                    </div>
                    <div class="modal-body">
                        <form class="form-group" id="updateProductForm">
                            <label>Product Name</label>
                            <input type="text" name="Name" id="frm-customer-name" class="form-control">

                            <label>Product New Name</label>
                            <input type="text" name="Name" id="frm-customer-name" class="form-control">


                            <label>Product New Price</label>
                            <input type="text" name="Price" id="frm-customer-price" class="form-control">

                            <label>Product New Amount</label>
                            <input type="text" name="Amount" id="frm-customer-image" class="form-control">

                            <label>Product New Image</label>
                            <input type="text" name="Image" id="frm-customer-image" class="form-control">

                            <div class="clearfix"></div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-link pull-left" data-dismiss="modal">Cancel</button>
                        <button type="button" onclick="UpdateProduct()" class="btn btn-default btn-success" data-dismiss="modal">Update</button>
                    </div>
                </div>
            </div>
        </div>



    </div>
</body>
</html>


